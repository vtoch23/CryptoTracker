# =============================================================================
# CryptoTracker Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------

# Secret key for JWT token signing (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-jwt-key-here-change-this

# JWT token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# CoinGecko API Configuration
# -----------------------------------------------------------------------------

# CoinGecko API Key (Optional - get from https://www.coingecko.com/en/api/pricing)
# Demo/Pro API key for higher rate limits
CoinGecko_API_KEY=your-coingecko-api-key-here

# CoinGecko Price API URL
COINGECKO_PRICE_URL=https://api.coingecko.com/api/v3/simple/price

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL connection string (Local development)
# Format: postgresql+psycopg2://username:password@host:port/database
DATABASE_URL=postgresql+psycopg2://crypto_user:crypto_pass@localhost:5433/crypto

# Docker environment - uncomment if running in Docker
# DATABASE_URL=postgresql+psycopg2://postgres:password@db:5432/cryptotracker

# -----------------------------------------------------------------------------
# Redis Configuration (for Celery result backend)
# -----------------------------------------------------------------------------

# Local Redis URL
REDIS_URL=redis://localhost:6379/0

# Docker Redis URL - uncomment if running in Docker
# REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# RabbitMQ / Celery Configuration
# -----------------------------------------------------------------------------

# RabbitMQ connection URL (message broker for Celery)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Docker RabbitMQ URL - uncomment if running in Docker
# RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# Celery broker URL (usually same as RabbitMQ)
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//

# Celery result backend (rpc:// or redis://)
CELERY_RESULT_BACKEND=rpc://

# -----------------------------------------------------------------------------
# Email / SMTP Configuration (for price alerts)
# -----------------------------------------------------------------------------

# SMTP server settings (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=True

# SMTP authentication (leave empty to disable email alerts)
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Email sender address
SMTP_FROM_EMAIL=noreply@cryptotracker.com

# -----------------------------------------------------------------------------
# Docker Environment Flags
# -----------------------------------------------------------------------------

# Set to "true" if running inside Docker container
DOCKER_CONTAINER=false
RUNNING_IN_DOCKER=false

# Frontend Environment Variables (Vite)

# Backend API URL (for frontend)
# VITE_API_URL=http://localhost:8000
